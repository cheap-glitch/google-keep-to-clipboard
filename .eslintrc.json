{
	"extends": "eslint:recommended",

	"env": {
		"es6":     true,
    "node":    true,
		"browser": true
	},

	"parserOptions": {
		"ecmaVersion": 2018
	},

	"plugins": [
		"smarter-tabs"
	],

	"rules": {
    "brace-style":               ["warn", "1tbs", { "allowSingleLine": true }],

		"no-irregular-whitespace":   0,
		"no-mixed-spaces-and-tabs":  ["warn", "smart-tabs"],

		"smarter-tabs/smarter-tabs": "warn"
	}
}
