{
    "extends": "eslint:recommended",

    "env": {
        "browser": true,
        "es6": true
    },

    "parserOptions": {
        "ecmaVersion": 2018
    },

    "plugins": [
	    "smarter-tabs"
    ],

    "rules": {
	    "no-irregular-whitespace":  0,
	    "no-mixed-spaces-and-tabs": ["warn", "smart-tabs"],

	    "smarter-tabs/smarter-tabs": "warn"
    }
}
